<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/styles.css">
    <title>{{title}}</title>
</head>
<body>
    <h1>{{title}}</h1>
    <div class="card-container">
        {{#each users}}
            <div class="card">
                <h3>{{this.first_name}} {{this.last_name}}</h3>
                <p><strong>Email:</strong> {{this.email}}</p>
            </div>
        {{/each}}
    </div>
    
    <!-- Paginación -->
    <div class="pagination">
        {{#if pagination.prevPage}}
            <a href="/users?page={{pagination.prevPage}}&limit={{pagination.limit}}">Anterior</a>
        {{/if}}

        {{#if pagination.nextPage}}
            <a href="/users?page={{pagination.nextPage}}&limit={{pagination.limit}}">Siguiente</a>
        {{/if}}
    </div>

    <a href="/" class="button">Volver a la página principal</a>
</body>
</html>
